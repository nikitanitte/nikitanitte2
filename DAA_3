#include <stdio.h>
#include <limits.h>
#include <time.h>
#define MAX 10
int a[MAX][MAX], visited[MAX], n, cost = 0;
int least(int city) {
 int min = INT_MAX, nc = -1;
 for (int i = 0; i < n; i++)
 if (a[city][i] && !visited[i] && a[city][i] < min) {
 min = a[city][i];
 nc = i;
 }
 return nc;
}
void tsp(int city) {
 visited[city] = 1;
 int next = least(city);
 if (next == -1) {
 cost += a[city][0];
 printf("%d --> 1\n", city + 1);
 } else {
 cost += a[city][next];
 printf("%d --> ", city + 1);
 tsp(next);
 }
}
int main() {
 printf("Enter number of cities: ");
 scanf("%d", &n);
 printf("Enter cost matrix:\n");
 for (int i = 0; i < n; i++)
 for (int j = 0; j < n; j++)
 scanf("%d", &a[i][j]);
 clock_t start = clock();
 printf("The path is:\n");
 tsp(0);
 printf("Minimum cost: %d\n", cost);
 printf("Runtime: %f seconds\n", (double)(clock() - start) / 
CLOCKS_PER_SEC);
 return 0;
}
Enter number of cities: 2
Enter cost matrix:
3 6
7 3
The path is:
1 --> 2 --> 1
Minimum cost: 13
Runtime: 0.000044 seconds
